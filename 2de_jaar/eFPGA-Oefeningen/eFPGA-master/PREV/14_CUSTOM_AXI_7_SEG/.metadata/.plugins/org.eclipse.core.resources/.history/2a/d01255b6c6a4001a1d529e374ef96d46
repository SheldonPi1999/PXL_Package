#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "sleep.h"
#include "SEVEN_SEGMENT_DECODER.h"

#include "xgpiops.h"

#define MASK_PS 0b0

#define CHANNEL_PS 1

#define GPIO_DEVICE_ID_PS XPAR_XGPIOPS_0_DEVICE_ID

int main()
{
    init_platform();
    unsigned int value = 0;



    for(;;)
    {
    	sleep_A9(1);
    	SEVEN_SEGMENT_DECODER_mWriteReg(XPAR_SEVEN_SEGMENT_DECODER_0_S00_AXI_BASEADDR, SEVEN_SEGMENT_DECODER_S00_AXI_SLV_REG0_OFFSET, value);
    }

    cleanup_platform();
    return 0;
}
